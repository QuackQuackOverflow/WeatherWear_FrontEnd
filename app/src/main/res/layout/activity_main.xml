<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 상단바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_wb_sunny_30dp_outline" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="웨더웨어"
                        android:textColor="#181818"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/skyblue"
                    android:src="@drawable/baseline_menu_30dp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- 콘텐츠 스크롤 영역 -->
        <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_above="@+id/navigationBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 날씨 정보 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/lightSkyblue">

                    <Button
                        android:id="@+id/toDetailedWeatherActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/currentTempView_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="70dp"
                        android:text="18°C"
                        android:textColor="#000000"
                        android:textSize="80sp" />

                    <TextView
                        android:id="@+id/checkCurrentRegion_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:text="충청남도 천안시 서북구"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/currentWeatherView_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/baseline_wb_sunny_100dp_outline" />
                </RelativeLayout>

                <!-- "시간대별 날씨" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightSkyblue">
                    <TextView
                        android:id="@+id/hourlyWeatherTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="시간대별 날씨"
                        android:background="@color/lightSkyblue"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- 시간대별 날씨 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@color/lightSkyblue">

                    <LinearLayout
                        android:id="@+id/hourlyWeatherScrollView_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <!-- 옷 추천 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/skyblue"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이런 옷은 어떠세요?"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <HorizontalScrollView
                        android:id="@+id/clothesViewContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:id="@+id/clothesLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- 하단 네비게이션 -->
        <LinearLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/lightSkyblue"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/navigationBarBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰API" />

            <Button
                android:id="@+id/navigationBarBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="개별API" />

            <Button
                android:id="@+id/navigationBarBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="내 계정" />
        </LinearLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
