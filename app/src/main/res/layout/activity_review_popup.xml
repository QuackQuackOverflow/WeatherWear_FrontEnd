<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.ReviewPopup">

    <!-- Toolbar -->
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deppSkyblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="추천된 옷들은 어땠나요?"
                android:textSize="22sp"
                android:textColor="@color/white" />

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/closeReview"
                android:src="@drawable/baseline_arrow_back_24_40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </Toolbar>

    <!-- 옷 추천 리스트 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/lightSkyblue"
        android:layout_height="500dp">

        <!-- 수직 스크롤 뷰 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <!-- 동적으로 추가될 컨테이너 -->
            <LinearLayout
                android:id="@+id/clothingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal" />
        </ScrollView>

        <!-- Bottom buttons for user feedback -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cold"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/skyblue"
                    android:text="추웠어요"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_hot"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/hotRed"
                    android:text="더웠어요"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_good"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@color/superLightGray"
                android:text="마음에 들어요"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
