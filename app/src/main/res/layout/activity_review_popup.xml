<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ReviewPopup">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deppSkyblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="입으신 옷은 어떠셨나요?"
                android:textSize="22sp"
                android:textColor="@color/white">

            </TextView>

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/closeReview"
                android:src="@drawable/baseline_arrow_back_24_40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"></ImageButton>

        </RelativeLayout>

    </Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/lightSkyblue"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/clothingViewForReview"
            android:src="@drawable/t_shirt_100dp"
            android:background="@color/lightGray"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="320dp"
            android:textSize="25sp"

            android:text="뭐시기 옷">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cold"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/skyblue"
                    android:text="추웠어요"
                    android:textSize="20sp"></Button>

                <Button
                    android:id="@+id/btn_hot"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/hotRed"
                    android:text="더웠어요"
                    android:textSize="20sp"></Button>

            </LinearLayout>

            <Button
                android:id="@+id/btn_good"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@color/superLightGray"
                android:text="마음에 들어요"
                android:textSize="20sp">
            </Button>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>