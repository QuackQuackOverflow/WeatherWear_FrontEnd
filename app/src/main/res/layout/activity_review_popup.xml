<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.ReviewPopup">

    <!-- Toolbar -->
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deppSkyblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="추천된 옷들은 어땠나요?"
                android:textSize="22sp"
                android:textColor="@color/white" />

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/closeReview"
                android:src="@drawable/baseline_arrow_back_24_40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </Toolbar>

    <!-- 옷 추천 리스트 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/lightSkyblue"
        android:layout_height="500dp">

        <!--수직 스크롤 뷰 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/clothingImage1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/lightGray"
                        android:src="@drawable/t_shirt_100dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/clothingName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="옷 이름"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/clothingImage2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/lightGray"
                        android:src="@drawable/t_shirt_100dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/clothingName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="옷 이름"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/clothingImage3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/lightGray"
                        android:src="@drawable/t_shirt_100dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/clothingName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="옷 이름"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Item 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/clothingImage4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/lightGray"
                        android:src="@drawable/t_shirt_100dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/clothingName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="옷 이름"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Item 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="30dp">

                    <ImageView
                        android:id="@+id/clothingImage5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/lightGray"
                        android:src="@drawable/t_shirt_100dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="30dp">

                        <TextView
                            android:id="@+id/clothingName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="옷 이름"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom buttons for user feedback -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cold"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/skyblue"
                    android:text="추웠어요"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_hot"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/hotRed"
                    android:text="더웠어요"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_good"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@color/superLightGray"
                android:text="마음에 들어요"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
