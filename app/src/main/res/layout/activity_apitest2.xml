<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 사용자로부터 nx 값을 입력받는 부분 -->
    <EditText
        android:id="@+id/editTextNx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nx 값을 입력하세요"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- 사용자로부터 ny 값을 입력받는 부분 -->
    <EditText
        android:id="@+id/editTextNy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ny 값을 입력하세요"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- 버튼 1: 수동으로 입력한 값으로 지역이름, 날씨 가져오기 -->
    <Button
        android:id="@+id/buttonGetRegionAndWeather_Custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="임의 nx, ny로 RWC 데이터 요청" />

    <Button
        android:id="@+id/buttonGetSampleData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="샘플 데이터 출력" />

    <!-- 버튼 2: 지역이름, 날씨만 가져오기 -->
    <Button
        android:id="@+id/buttonGetRegionAndWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="지역 및 날씨 데이터 요청" />

    <!-- 버튼 3: userType을 전송하고 의상 세트 가져오기 -->
    <Button
        android:id="@+id/buttonGetClothingSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="의상 세트 가져오기" />

    <!-- 버튼 4: ID, 리뷰내용, 날짜를 담아 리뷰요청 -->
    <Button
        android:id="@+id/buttonSubmitReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="리뷰 전송 (jts3531이랑 추웠어요(-1) )" />

    <!-- 버튼 5: ID, 리뷰내용, 날짜를 담아 리뷰요청 -->
    <Button
        android:id="@+id/btn_testAIrecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AI기반 옷차림 추천 테스트 \n( 파라미터 : jts3531 )" />

    <!-- 버튼 6 : AI기반 옷차림 추천 출력 테스트 (샘플사용) -->
    <Button
        android:id="@+id/btn_testAIrecommendationWithSample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AI기반 옷차림 추천 출력 테스트 (샘플사용)" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- 결과를 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:text="결과가 여기에 표시됩니다."
            android:textSize="16sp" />
    </ScrollView>
</LinearLayout>
